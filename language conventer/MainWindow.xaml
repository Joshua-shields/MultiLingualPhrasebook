<Window x:Class="language_conventer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:language_conventer"
        mc:Ignorable="d"
        Title="Language Converter" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="10">
            <ComboBox x:Name="LanguageComboBox" 
                      ItemsSource="{Binding Languages}" 
                      Width="200" Margin="0,0,10,0"/>
            <Button Content="Translate" Click="TranslateButton_Click"/>
        </StackPanel>

        <ListBox x:Name="PhrasesListBox" 
                 ItemsSource="{Binding Phrases}" 
                 Grid.Row="1" Margin="10">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding English}" Width="200"/>
                        <TextBlock Text="{Binding Translated}" Width="200"/>
                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
    </Grid>
</Window>